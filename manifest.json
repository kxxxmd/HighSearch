{
  "manifest_version": 2,
  "name": "Pesquisa Rápida",
  "version": "1.0",
  "description": "Selecione um texto e pesquise no Google com um botão.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}